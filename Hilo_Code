import random

class Score:
    def __init__(self):
        self.player_score = int(300)

    def return_score(self):
        return self.player_score

    def adjust_score(self, value):
        self.player_score += value


class Hilo:
    def __init__(self):
        self.card = random.randint(1, 13)

    def current_card(self):
        return self.card

    def new_card(self, guess):
        guess = guess.lower() #Ensures letter is lower case
        self.new_card = random.randint(1, 13)

        if self.new_card == self.card:
            self.new_card = random.randint(1, 13) #In case the numbers match

        if guess == "h":
            if self.new_card > self.card:
                return 100
            else:
                return -75
        elif guess == "l":
            if self.new_card > self.card:
                return -75
            else:
                return 100

        self.card = self.new_card

def main():
    score = Score()
    hilo = Hilo()
    again = ""

    print("{}".format(Hilo.current_card))

    while again != "n" or score.return_score > int(0):
        print("{}".format(score.return_score))
        
        guess = str(input("Higher or Lower? [h/l] "))
        score.adjust_score(hilo.new_card(guess))
        print("{}".format(hilo.current_card))
        print("{}".format(score.return_score))
        again = str(input("Play Again? [y/n] "))

if __name__ == "__main__":
    main()